@{
    ViewData["Title"] = "Criar";
}
<h1>Criação de novos contatos</h1>


<div>
    <form>
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" placeholder="Entre com o nome">

            <label for="email">Nome</label>
            <input type="text" class="form-control" placeholder="Entre com o email">

            <label for="telefone">Telefone</label>
            <input type="text" class="form-control" placeholder="Entre com o nome">
            
        </div>

        <button type="submit" class="btn btn-primary">Adicionar</button>
        <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </form>

</div>
